<Shell
    x:Class="seazermusic5.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:seazermusic5"
    Shell.FlyoutBehavior="Disabled"
    Shell.FlyoutWidth="190"
    IconImageSource="logoooo.png"
    Shell.NavBarHasShadow="True"
    Shell.NavBarIsVisible="False"
    Shell.TabBarBackgroundColor="Transparent"
    Title="Seazer Music"
   
      
    Shell.TabBarForegroundColor="#3572EF"
       >
    <Shell.Resources>
        <ResourceDictionary>

            <Color x:Key="TabBarSelectedColor">#3572EF</Color>
            <!-- Seçili sekme rengi -->
        </ResourceDictionary>
    </Shell.Resources>
    <!-- Üstteki Boşluğun Yönetimi -->
    <Shell.NavBarIsVisible>
        <OnPlatform x:TypeArguments="x:Boolean">
            <On Platform="Android" Value="True" />
            <On Platform="iOS, WinUI, MacCatalyst" Value="False" />
        </OnPlatform>
    </Shell.NavBarIsVisible>
     

       
    <!-- Ana Sayfa(Opsiyonel) -->
   
</Shell>
 